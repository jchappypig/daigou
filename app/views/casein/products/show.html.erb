<h2>
  <%= t('action.view_product') %>
</h2>

<%= form_for @product, :url => casein_product_path(@product) do |f| %>

	<%= render :partial => 'casein/products/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to  t('action.cancel'), casein_products_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit  t('action.edit'), :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"} #{t('action.list')}".html_safe, casein_products_path %></li>
<% end %>