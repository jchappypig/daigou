<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>
  <%= t('menu.products') %>
  <%= casein_pagination_details @products %>
</h2>

<div class="row">
  <div class="col-lg-6">
  </div>
  <div class="col-lg-6">
    <%= form_tag casein_products_path, :method => 'get' do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: t('message.product_search') %>
          <span class="input-group-btn">
        <%= submit_tag t('action.search'), :name => nil, class: 'btn btn-primary' %>
      </span>
        </div>
    <% end %>
  </div>
</div>
<br />
<br />
<%= render :partial => 'casein/products/table', :locals => {:products => @products} %>

<div class="text-center">
  <%= will_paginate @products %>
</div>

<%= content_for :sidebar do %>
    <% if current_user.is_admin? %>
        <li><%= link_to "#{casein_show_icon "plus-sign"} #{t('menu.new_product')}".html_safe, new_casein_product_path %></li>
    <% end %>
<% end %>