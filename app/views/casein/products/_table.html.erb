<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th><%= casein_sort_link t('product.name'), :name %></th>
    <th><%= casein_sort_link t('product.description'), :description %></th>
    <th><%= casein_sort_link t('product.link'), :link %></th>
    <th><%= casein_sort_link t('product.category'), :link %></th>
    <% if current_user.is_admin? %>
        <th>&nbsp;</th>
    <% end %>
  </tr>
  </thead>

  <% products.each do |product| %>
      <tr>
        <td><%= casein_table_cell_link product.name, casein_product_path(product) %></td>
        <td><%= casein_table_cell_link product.description, casein_product_path(product) %></td>
        <td><%= casein_table_cell_link product.link, casein_product_path(product) %></td>
        <td><%= casein_table_cell_link product.category, casein_product_path(product) %></td>
        <% if current_user.is_admin? %>
            <td class="delete">
              <%= link_to(casein_show_row_icon('stop'), casein_product_path(product), :method => :delete, :data => {:confirm => t('message.confirm_delete_product')}) %>
            </td>
        <% end %>
      </tr>
  <% end %>
</table>