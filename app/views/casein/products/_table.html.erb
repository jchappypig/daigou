<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
  <thead>
  <tr>
    <th><%= casein_sort_link t('product.name'), :name %></th>
    <th><%= casein_sort_link t('product.category'), :category %></th>
    <% if current_user.is_admin? %>
        <th>&nbsp;</th>
    <% end %>
  </tr>
  </thead>

  <% products.each do |product| %>
      <tr>
        <td><%= casein_table_cell_link product.name, current_user.is_admin? ? casein_product_path(product) : product.link %></td>
        <td><%= casein_table_cell_link product.category, current_user.is_admin? ? casein_product_path(product) : product.link %></td>
        <% if current_user.is_admin? %>
            <td class="delete">
              <%= link_to(casein_show_row_icon('stop'), casein_product_path(product), :method => :delete, :data => {:confirm => t('message.confirm_delete_product')}) %>
            </td>
        <% end %>
      </tr>
  <% end %>
</table>